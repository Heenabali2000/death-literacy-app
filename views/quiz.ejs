<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Death Literacy Quiz</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      background: #f8f9fa;
      font-family: 'Segoe UI', sans-serif;
    }
    .quiz-container {
      max-width: 800px;
      margin: auto;
      background: #fff;
      padding: 30px;
      border-radius: 12px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
    .btn-primary {
      background-color: #1f6e21;
      border: none;
    }
    .btn-primary:hover {
      background-color: #1f6e21;
    }
    .btn-success {
      background-color: #28a745;
      border: none;
    }
    .btn-success:hover {
      background-color: #218838;
    }
    #results {
      background-color: #e9ecef;
      border-radius: 8px;
      padding: 20px;
      display: none;
    }
    .navbar {
      background-color: #000;
    }
    .navbar a {
      color: white !important;
    }
    .navbar a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg">
    <div class="container">
      <a class="navbar-brand" href="/">TechShift</a>
      <div class="collapse navbar-collapse justify-content-end">
        <ul class="navbar-nav">
          <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
          <li class="nav-item"><a class="nav-link" href="/about">About</a></li>
          <li class="nav-item"><a class="nav-link active" href="/quiz">Quiz</a></li>
          <li class="nav-item"><a class="nav-link" href="/resources">Resources</a></li>
          <li class="nav-item"><a class="nav-link" href="/contact">Contact</a></li>
          <% if (user && user.firstname) { %>
            <li class="nav-item"><span class="nav-link">Hi, <%= user.firstname %></span></li>
            <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
          <% } else { %>
            <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Quiz Container -->
  <div class="container py-5">
    <div class="quiz-container">
      <h2 class="text-center mb-4 fw-bold">Death Literacy Index Quiz</h2>
      <div class="progress mb-4">
        <div id="progressBar" class="progress-bar bg-success" style="width: 0%"></div>
      </div>
      <form id="quizForm">
        <div id="questionsContainer" class="mb-4"></div>
        <div class="d-flex justify-content-between">
          <button type="button" id="startBtn" class="btn btn-primary">Start quiz</button>
          <button type="submit" id="submitBtn" class="btn btn-success" style="display: none;">Submit</button>
        </div>
      </form>
      <div id="results" class="mt-5">
        <h4 class="mb-3 text-success">âœ… Thank you for completing the quiz!</h4>
        <p id="scoreDisplay" class="text-muted"></p>
      </div>
    </div>
  </div>

  <script src="/js/quizData.js"></script>
  <script src="/js/quiz.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
function submitQuiz() {
  const answers = {
    q1: document.querySelector('input[name="q1"]:checked')?.value,
    q2: document.querySelector('input[name="q2"]:checked')?.value,
    // continue for other questions
  };

  fetch('/save-scores', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ answers })
  })
  .then(res => res.json())
  .then(data => {
    console.log('Saved:', data);
    alert('Quiz submitted successfully!');
  })
  .catch(err => {
    console.error('Error submitting quiz:', err);
    alert('Error submitting quiz.');
  });
}
</script>

<!-- Attach to your button -->
<button onclick="submitQuiz()">Submit</button>

</body>
</html>